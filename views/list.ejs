
<%- include("header.ejs", {title: "To Do List"}); %>

    <div class="box" id="heading">
        <h1><%= day %></h1>
    </div>

    <div class="box">


        <%  todo.forEach(function(result){ %>
        <form action="/delete" method="POST">
            <div class="item">
                <input type="checkbox" name="item" value="<%= result._id %>" onchange="this.form.submit()">
                <input type="hidden" name="list" value="<%= day %>">
                <p><%= result.name %></p>
            </div>
        </form>

        <%  }); %>
        <form class="item" action="/" method="POST">
            <input type="text" name="todo" placeholder="To Do List" autofocus autocomplete="off">
            <button type="submit" name="list" value="<%= day %>">+</button>
        </form>
    </div>

    <%- include("footer.ejs"); %>
