
<%- include("header.ejs", {title: "To Do List"}); %>

    <div class="box" id="heading">
        <h1><%= day %></h1>
    </div>

    <div class="box">


        <%  todo.forEach(function(result){ %>
        <div class="item">
            <input type="checkbox">
            <p><%= result.name %></p>
        </div>

        <%  }); %>
        <form class="item" action="/" method="POST">
            <input type="text" name="todo" placeholder="To Do List" autofocus autocomplete="off">
            <button type="submit" name="list" value="<%= list %>">+</button>
        </form>
    </div>

    <%- include("footer.ejs"); %>
